node {
    stage('Build') {
        docker.image('maven:3.9.0').inside('-v /root/.m2:/root/.m2') {
            sh 'mvn -B -DskipTests clean package'
        }
    }
    
    stage('Test') {
        docker.image('maven:3.9.0').inside('-v /root/.m2:/root/.m2') {
            sh 'mvn test'
        }
        
        if (currentBuild.result == 'SUCCESS') {
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
    }
    
    stage('Deliver') {
        if (currentBuild.result == 'SUCCESS') {
            sh './jenkins/scripts/deliver.sh'
        }
    }
}
