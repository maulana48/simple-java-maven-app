node {
    checkout scm
    stage('Build') {
        docker.image('maven:3.9.0').inside('-v /root/.m2:/root/.m2') {
            sh 'mvn -B -DskipTests clean package'
        }
    }
    
    stage('Test') {
        docker.image('maven:3.9.0').inside('-v /root/.m2:/root/.m2') {
            sh 'mvn test'
        }
        
        if (currentBuild.result == 'SUCCESS') {
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
    }
    
    stage('Deliver') {
        docker.image('maven:3.9.0').inside('-v /root/.m2:/root/.m2') {
            sh './jenkins/scripts/deliver.sh'
        }
    }
    
    stage('Deploy') {
        withAWS(region: 'us-east-1', credentials: 'maulana48') {
            sh 'pwd'
            sh 'ls -la'
            sh 'chmod 600 ./test-key.pem'
            sh 'ssh -o "StrictHostKeyChecking no" -i ./test-key.pem test@18.142.179.80 \
            "ls -la" \
            "git pull https://github.com/maulana48/simple-java-maven-app.git" \
            "cd ./simple-java-maven-app" \
            "docker build -t test ." \
            "ddocker run -p 8080:8080 test"'
        }
    }
}